<form asp-action="Cambio" method="post">
    <label>Envías:</label>
    <select name="envias">
        <option value="BRL">Real Brasileño (BRL)</option>
    </select>
    <input type="number" name="cantidadEnvias" required />

    <label>Recibes:</label>
    <select name="recibes">
        <option value="PEN">Sol Peruano (PEN)</option>
    </select>
    
    <button type="submit">Hacer Cambio</button>
</form>
